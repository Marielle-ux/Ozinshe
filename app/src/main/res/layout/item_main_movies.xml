<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="300dp"
    android:layout_height="wrap_content"
    android:layout_marginEnd="16dp">

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/imgMainMovie"
        android:layout_width="0dp"
        android:layout_height="164dp"
        android:scaleType="centerCrop"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:shapeAppearanceOverlay="@style/style_corner_for_image_12dp"
        tools:src="@drawable/sample_image" />

    <TextView
        android:id="@+id/tvTextTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:ellipsize="end"
        android:fontFamily="@font/sf_bold"
        android:lines="1"
        android:text="yeahblahblah"
        android:textColor="?attr/textAppearanceBody1"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="@id/imgMainMovie"
        app:layout_constraintTop_toBottomOf="@id/imgMainMovie" />

    <TextView
        android:id="@+id/tvTextDescription"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:ellipsize="end"
        android:fontFamily="@font/sf_regular"
        android:lines="3"
        android:text="blahblahblahblahblahblahjfklhgklfhgfg "
        android:textColor="@color/grey_400"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="@id/imgMainMovie"
        app:layout_constraintStart_toStartOf="@id/imgMainMovie"
        app:layout_constraintTop_toBottomOf="@id/tvTextTitle" />

    <TextView
        android:id="@+id/tvGenre"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/background_button_8dp_circle"
        android:backgroundTint="@color/primary_600"
        android:ellipsize="end"
        android:fontFamily="@font/sf_medium"
        android:lines="1"
        android:paddingHorizontal="8dp"
        android:paddingVertical="4dp"
        android:text="Телехикая"
        android:textColor="@color/white"
        android:textSize="12sp"
        app:layout_constraintStart_toStartOf="@id/imgMainMovie"
        app:layout_constraintTop_toTopOf="@id/imgMainMovie" />

</androidx.constraintlayout.widget.ConstraintLayout>