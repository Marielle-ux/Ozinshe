<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="300dp"
    android:layout_height="wrap_content"
    android:layout_marginEnd="16dp"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

<com.google.android.material.imageview.ShapeableImageView
    android:id="@+id/imgMainMovie"
    android:layout_width="0dp"
    android:layout_height="164dp"
    android:scaleType="centerCrop"
    app:shapeAppearanceOverlay="@style/style_corner_for_image_12dp"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    tools:src ="@drawable/sample_image"/>

    <TextView
        android:id="@+id/tvTextTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:lines="1"
        android:ellipsize="end"
        android:textSize="14sp"
        android:fontFamily="@font/sf_bold"
        android:text="yeahblahblah"
        android:textColor="@color/grey_900"
        app:layout_constraintStart_toStartOf="@id/imgMainMovie"
        app:layout_constraintTop_toBottomOf="@id/imgMainMovie"/>

    <TextView
        android:id="@+id/tvTextDescription"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:lines="3"
        android:textSize="12sp"
        android:fontFamily="@font/sf_regular"
        android:text="blahblahblahblahblahblahjfklhgklfhgfg "
        android:ellipsize="end"
        android:textColor="@color/grey_400"
        app:layout_constraintTop_toBottomOf="@id/tvTextTitle"
        app:layout_constraintStart_toStartOf="@id/imgMainMovie"
        app:layout_constraintEnd_toEndOf="@id/imgMainMovie"/>

    <TextView
        android:id="@+id/tvGenre"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginStart="8dp"
        android:lines="1"
        android:paddingHorizontal="8dp"
        android:paddingVertical="4dp"
        android:background="@drawable/background_button_8dp_circle"
        android:backgroundTint="@color/primary_600"
        android:ellipsize="end"
        android:textSize="12sp"
        android:fontFamily="@font/sf_medium"
        android:text="Телехикая"
        android:textColor="@color/white"
        app:layout_constraintStart_toStartOf="@id/imgMainMovie"
        app:layout_constraintTop_toTopOf="@id/imgMainMovie"/>

</androidx.constraintlayout.widget.ConstraintLayout>