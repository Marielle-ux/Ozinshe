<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/background_circle_32dp"
    android:paddingBottom="24dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <View
        android:id="@+id/divider_bottomsheet"
        android:layout_width="64dp"
        android:layout_height="5dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/divider_5dp_grey_circle"
        android:backgroundTint="@color/grey_200"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/tvLanguage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/profile_language"
        android:fontFamily="@font/sf_bold"
        android:textFontWeight="700"
        android:textColor="@color/grey_900"
        android:textSize="24dp"
        android:layout_marginTop="32dp"
        android:layout_marginStart="24dp"
        app:layout_constraintTop_toBottomOf="@+id/divider_bottomsheet"
        app:layout_constraintStart_toStartOf="parent"/>
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginHorizontal="24dp"
        app:layout_constraintTop_toBottomOf="@+id/tvLanguage"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">
        <LinearLayout
            android:id="@+id/btnSelectEnglish"
            android:layout_width="match_parent"
            android:layout_height="64dp"
            android:orientation="horizontal">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:fontFamily="@font/sf_bold"
                android:textFontWeight="600"
                android:text="English"
                android:textColor="@color/grey_900"
                android:textSize="16dp" />
            <View
                android:id="@+id/IconBtnSelectedEnglish"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:background="@drawable/ic_check"
                android:layout_gravity="center"/>
        </LinearLayout>
        <View
            android:layout_width="wrap_content"
            android:layout_height="1.5dp"
            android:backgroundTint="@color/grey_200"
            android:background="@drawable/divider_1dp_grey"/>

        <LinearLayout
            android:id="@+id/btnSelectKazakh"
            android:layout_width="match_parent"
            android:layout_height="64dp"
            android:orientation="horizontal">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:fontFamily="@font/sf_bold"
                android:textFontWeight="600"
                android:text="Қазақша"
                android:textColor="@color/grey_900"
                android:textSize="16dp" />
            <View
                android:id="@+id/IconBtnSelectedKazakh"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:background="@drawable/ic_check"
                android:layout_gravity="center"/>
        </LinearLayout>
        <View
            android:layout_width="wrap_content"
            android:layout_height="1.5dp"
            android:backgroundTint="@color/grey_200"
            android:background="@drawable/divider_1dp_grey"/>

        <LinearLayout
            android:id="@+id/btnSelectRussian"
            android:layout_width="match_parent"
            android:layout_height="64dp"
            android:orientation="horizontal">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:fontFamily="@font/sf_bold"
                android:textFontWeight="600"
                android:text="Русский"
                android:textColor="@color/grey_900"
                android:textSize="16dp" />
            <View
                android:id="@+id/IconBtnSelectedRussian"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:background="@drawable/ic_check"
                android:layout_gravity="center"/>
        </LinearLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>