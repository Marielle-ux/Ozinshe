<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="16dp"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">
<com.google.android.material.imageview.ShapeableImageView
    android:id="@+id/imgTvSeries"
    android:layout_width="match_parent"
    android:layout_height="178dp"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    android:scaleType="centerCrop"
    android:layout_marginTop="16dp"
    app:shapeAppearanceOverlay="@drawable/background_button_12dp_circle"
    tools:src="@tools:sample/avatars"/>

    <TextView
        android:id="@+id/textSeries"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textAlignment="textStart"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/sf_bold"
        android:text="1 -ші бөлім"
        android:textColor="@color/grey_900"
        android:textFontWeight="700"
        android:textSize="14dp"
        app:layout_constraintEnd_toEndOf="@+id/imgTvSeries"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/imgTvSeries" />
</androidx.constraintlayout.widget.ConstraintLayout>